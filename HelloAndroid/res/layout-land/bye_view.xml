<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <TextView
            android:id="@+id/byeMsgTextView"
            style="@style/WhiteStyle"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_white"
            android:text="@string/bye_message" android:layout_gravity="center_horizontal"/>

    <Button
            android:id="@+id/sayByeButton"
            style="@style/GreenStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/say_bye_button" android:layout_gravity="center_horizontal"/>
</LinearLayout>
